---
import { Image } from "astro:assets";
import logo from "../../public/logo-xl.png";

const { class: className = "" } = Astro.props;
---

<header class={`${className} headerContainer`}>
  <h1 id="heading-page-name" class="heading">
    <Image class="header-image" src={logo} alt="Sam Wagner" class="logo" width={1500} height={1500} />
  </h1>
  <slot />
</header>

<style>
  .headerContainer {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
  }

  .heading {
    display: flex;
    justify-content: center;
    margin: 0;
    min-height: 37rem;
  }

  .header-image {
    filter: drop-shadow(1px 1px 0.1rem rgba(0,0,0,0.5))
  }

  .logo {
    max-width: 37rem;
    width: 100%;
    height: auto;
    aspect-ratio: 1 / 1;
  }
  
  @media (max-width: 640px) {
    .heading {
      min-height: calc(100vw - 2rem);
    }
  }
</style>
